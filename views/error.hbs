<div class="container mt-5">
    <div class="alert alert-danger text-center">
        <h1 class="display-4">{{message}}</h1>
        <h2 class="text-warning">Error: {{error.status}}</h2>
    </div>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Stack Trace</h5>
            <pre class="bg-dark text-danger p-3 rounded">{{error.stack}}</pre>
        </div>
    </div>
</div>