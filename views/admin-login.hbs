{{!-- Botões de ação --}}
<div class="container text-center my-4">
    <div class="btn-group" role="group" aria-label="Ações">
        <!-- Botão "Voltar" não será parte do grupo de botões -->
        <a href="/" class="btn btn-outline-dark">Voltar</a>
    </div>
</div>

{{!-- Página de Login --}}
<div class="container-sm bg-dark text-light justify-content border rounded">
    <form id="form" action="/v2/login" method="post">

        {{!-- E-mail --}}
        <div class="input-group mt-3 mb-2">
            <span class="input-group-text" id="basic-addon1" style="width: 100px;">E-mail</span>
            <input id="email" type="email" class="form-control bg-light text-dark focus-ring focus-ring-secondary"
                placeholder="E-mail" aria-label="Email" aria-describedby="basic-addon1" name="email" required>
        </div>

        {{!-- Senha --}}
        <div class="input-group mb-2">
            <span class="input-group-text" id="basic-addon1" style="width: 100px;">Senha</span>
            <input id="password" type="password" class="form-control" placeholder="Senha" aria-label="Password"
                aria-describedby="Password" name="hash" required>
            <div id="passwordAlert" class="invalid-feedback">
            </div>
        </div>

        <div class="d-flex align-items-center">

            {{!-- Botão de envio --}}
            <button type="submit" class="btn btn-outline-light mb-3">Entrar</button>

            {{!-- Checkbox para lembrar do login --}}
            {{!-- <div class="form-check ms-3 mb-3">
                <input class="form-check-input" type="checkbox" value="" id="rememberMe">
                <label class="form-check-label" for="rememberMe">
                    Lembrar-me
                </label>
            </div> --}}

            <small class="ms-auto">v1.2.0❄️</small>
        </div>

    </form>
    <script src="/javascripts/notification.js" defer></script>
    <script src="/javascripts/password-eval.js" defer></script>
</div>

