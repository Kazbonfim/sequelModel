{{!-- Botões de ação --}}
<div class="container mt-3">
    <div class="container rounded-3 p-4 bg-forms-main">
        <!-- Header de Navegação, OK -->
        <div class="row mb-3 text-center">
            {{!-- Collapse do login --}}
            <div class="col">
                <button type="button" class="btn w-100 btn-outline-light mb-3" data-bs-toggle="collapse"
                    data-bs-target="#loginForm">Login</button>
                <div class="collapse" id="loginForm">
                    <div class="input-group mb-3">
                        <span class="input-group-text label-highlight">E-mail</span>
                        <input type="email" class="form-control" placeholder="Digite seu e-mail" aria-label="E-mail"
                            aria-describedby="email-login">
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text label-highlight">Senha</span>
                        <div class="form-floating">
                            <input type="password" class="form-control" id="floatingInputGroup1" placeholder="Senha">
                            <label for="floatingInputGroup1">Lembra da sua senha, né?</label>
                        </div>
                    </div>
                    <div class="form-check mb-3">
                        <input type="checkbox" class="form-check-input" id="lembrar-login">
                        <label class="form-check-label text-light" for="lembrar-login">Lembrar último login</label>
                    </div>
                    <button type="submit" class="btn w-100 btn-outline-success">Entrar</button>
                </div>
            </div>
            {{!-- Collapse do cadastro --}}
            <div class="col">
                <button type="button" class="btn w-100 btn-outline-light mb-3" data-bs-toggle="collapse"
                    data-bs-target="#signupForm">Cadastro</button>
                <div class="collapse" id="signupForm">
                    <div class="input-group mb-3">
                        <span class="input-group-text label-highlight">Usuário</span>
                        <input type="text" class="form-control" placeholder="Nome de usuário" aria-label="Usuário"
                            aria-describedby="usuario-cadastro">
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text label-highlight">E-mail</span>
                        <input type="email" class="form-control" placeholder="Digite seu e-mail" aria-label="E-mail"
                            aria-describedby="email-cadastro">
                    </div>
                    <div class="input-group mb-3">
                        <label class="input-group-text label-highlight" for="profissao-cadastro">Profissão</label>
                        <select class="form-select" id="profissao-cadastro" aria-label="Profissão">
                            <option selected>Sua profissão?</option>
                            <option value="1">Admin</option>
                            <option value="2">User</option>
                            <option value="3">Dev</option>
                        </select>
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text label-highlight">Senha</span>
                        <div class="form-floating">
                            <input type="password" class="form-control" id="floatingInputGroup2" placeholder="Senha">
                            <label for="floatingInputGroup2">Escolha uma senha decente, ok?</label>
                        </div>
                    </div>
                    <div class="form-check mb-3">
                        <input type="checkbox" class="form-check-input" id="newsletter">
                        <label class="form-check-label text-light" for="newsletter">Deseja receber nossa
                            newsletter?</label>
                    </div>
                    <button type="submit" class="btn w-100 btn-outline-success">Cadastrar</button>
                </div>
            </div>
        </div>
        <small class="ms-auto text-light">v1.5.0</small>
    </div>
</div>

